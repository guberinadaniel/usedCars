    {#{% for entry in form['#content'].data %}#}
        {#{% if entry is iterable %}#}
            {#{{ form.filters.container }}#}
            {#<div class="car-info-wraper">#}
                {#<span class="model-year">{{ entry.title }}</span>#}
                {#<span class="model-year">{{ entry.model_year }}</span>#}
